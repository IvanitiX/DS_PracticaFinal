<p id="notice"><%= notice %></p>

<h1>Trabajos</h1>

<% if @trabajos != nil %>
<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Localizacion</th>
      <th>Presupuesto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajos.each do |trabajo| %>
      <tr>
        <td><%= trabajo.descripcion %></td>
        <td><%= trabajo.localizacion %></td>
        <td><%= trabajo.presupuesto %></td>
        <td><%= link_to 'Show', trabajo %></td>
        <td><%= link_to 'Edit', edit_trabajo_path(trabajo) %></td>
        <td><%= link_to 'Destroy', trabajo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
